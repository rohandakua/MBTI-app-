<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".Home">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/cl1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cl2"
        android:layout_height="200dp">
        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/tv1"
            android:text="@string/estptext"
            android:textSize="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/cv1"
            >

        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:id="@+id/cv1"
            android:layout_height="180dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv1"
            app:layout_constraintRight_toRightOf="parent"
            app:cardCornerRadius="200dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/iv1"
                android:background="@drawable/istp"

                ></ImageView>


        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/cl4"
        app:layout_constraintTop_toBottomOf="@+id/cl1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/cl2"

        android:layout_height="55dp">
        <TextView
            android:layout_width="300dp"
            android:id="@+id/tv2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn1"
            android:text="@string/take_test_again"
            android:textSize="39dp"
            android:gravity="center"
            android:fontFamily="cursive"
            app:layout_constraintHorizontal_weight="1"
            android:layout_height="55dp">

        </TextView>
        <Button
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:backgroundTint="#302D2D"
            app:layout_constraintLeft_toRightOf="@+id/tv2"
            android:layout_height="match_parent"
            android:id="@+id/btn1"
            android:text="@string/sign_out"
            android:textSize="16dp"
            android:textColor="@color/white"
            ></Button>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/cl4"
        app:layout_constraintBottom_toTopOf="@+id/cl3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl2"
        android:layout_height="300dp">
        <ScrollView
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:textSize="20dp"
                android:layout_margin="20dp"
                android:text="@string/estpt"
                ></TextView>

        </ScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/cl3"
        app:layout_constraintTop_toBottomOf="@+id/cl4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="100dp"
        >
        <ImageView
            android:layout_width="55dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/link2"
            android:id="@+id/link1"
            android:background="@drawable/gitt"
            android:layout_marginLeft="100dp"
            android:layout_height="55dp">

        </ImageView>
        <ImageView
            android:layout_width="50dp"
            android:id="@+id/link2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/link1"
            app:layout_constraintRight_toLeftOf="@+id/link3"
            android:background="@drawable/lii"
            android:layout_height="50dp">

        </ImageView>
        <ImageView
            android:layout_width="40dp"
            android:id="@+id/link3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/link2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/igg"
            android:layout_marginRight="100dp"
            android:layout_height="40dp">

        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    

</androidx.constraintlayout.widget.ConstraintLayout>