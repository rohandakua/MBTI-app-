<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test">

    <androidx.constraintlayout.widget.ConstraintLayout

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cl2"

        android:id="@+id/cl1"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Spinner

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv1"
            app:layout_constraintLeft_toLeftOf="parent"

            android:layout_width="60dp"

            android:id="@+id/spinner1"
            android:layout_height="60dp"></Spinner>
        <TextView

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn1"
            app:layout_constraintLeft_toRightOf="@+id/spinner1"

            android:layout_width="200dp"
            android:id="@+id/tv1"
            android:text=""
            android:gravity="center"
            android:textSize="25dp"
            android:layout_height="match_parent"></TextView>
        <Button

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv1"

            android:layout_width="100dp"
            android:text="Submit"
            android:textSize="16dp"
            android:id="@+id/btn1"
            android:layout_height="match_parent"></Button>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout

        app:layout_constraintTop_toBottomOf="@+id/cl1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/clinclude1"

        android:layout_width="match_parent"
        android:id="@+id/cl2"
        android:layout_height="50dp">
        <TextView

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tvhowManySkipped"
            app:layout_constraintLeft_toLeftOf="parent"

            android:layout_width="200dp"
            android:gravity="center"
            android:id="@+id/tvHowManyAttempted"
            android:text="Attempted - "
            android:textSize="22dp"
            android:layout_height="match_parent">

        </TextView>
        <TextView

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tvHowManyAttempted"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_width="200dp"
            android:text="Skipped - "
            android:textSize="22dp"
            android:gravity="center"
            android:id="@+id/tvhowManySkipped"
            android:layout_height="match_parent"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout

        app:layout_constraintTop_toBottomOf="@+id/cl2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cl3"

        android:id="@+id/clinclude1"
        android:background="@drawable/qustionbackground"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <TextView

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/crg1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:text="11. In judging others are you more swayed
by:"
            android:layout_margin="15dp"
            android:id="@+id/ctv1"
            android:layout_height="wrap_content"></TextView>

        <RadioGroup

            android:id="@+id/crg1"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ctv1">
            <RadioButton
                android:id="@+id/crb1"
                android:layout_width="match_parent"
                android:textSize="30dp"
                android:text="a. “Say what they mean and mean what they
say”"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"></RadioButton>

            <RadioButton
                android:id="@+id/crb2"
                android:textSize="30dp"
                android:text="a. “Say what they mean and mean what they
say”"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></RadioButton>


        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout

        app:layout_constraintTop_toBottomOf="@+id/clinclude1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_width="match_parent"
        android:id="@+id/cl3"
        android:layout_height="50dp">

        <Button

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/next"

            android:layout_width="wrap_content"
            android:text="PREV"
            android:layout_height="match_parent"
            android:id="@+id/prev"></Button>
        <Button

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/prev"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_width="wrap_content"
            android:text="NEXT"
            android:layout_height="match_parent"
            android:id="@+id/next"></Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>